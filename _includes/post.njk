---
layout: base.njk
permalink: "/news/{{ page.fileSlug }}/index.html"
---

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": "{{ title | safe }}",
  "datePublished": "{{ date | date("yyyy-MM-dd") }}",
  "dateModified": "{{ date | date("yyyy-MM-dd") }}",
  "publisher": {
    "@type": "Organization",
    "@id": "https://nutriish.me/#organization",
    "name": "Nutriish",
    "logo": {
      "@type": "ImageObject",
      "url": "https://nutriish.me/images/Nutriish_logo.png"
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "https://nutriish.me/news/{{ page.fileSlug }}/"
  }
}
</script>

<h1>{{ title }}</h1>
<small>{{ date | date("dd MMM yyyy") }} â€” {{ content | readingTime }} min read</small>
<p>{{ excerpt }}</p>
<div>{{ content | safe }}</div>
